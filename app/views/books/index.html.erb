<h1>Books</h1>
<% @books.each do |book| %>
  <p>Title</p>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>

  <p>Body</p>
  <span>
    <%= link_to book.body, book_path(book.id) %>
  </span>
  
  <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "date-confirm" => "Are you sure?" %>

<% end %>